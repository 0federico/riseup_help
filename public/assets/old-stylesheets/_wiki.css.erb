.wiki p {
  margin: 0.7em 0;
}

.wiki blockquote {
  margin-left: 2em;
  margin-right: 2em;
}

.wiki ol {
  list-style-type: decimal;
}
.wiki ul {
  list-style-type: disc;
}

.wiki li {
  margin-left: 2em;
}

.wiki pre {
  white-space: pre-wrap;
  white-space: -moz-pre-wrap;
  white-space: -pre-wrap;
  white-space: -o-pre-wrap;
  word-wrap: break-word;
}

.wiki code {
  background: #FFF6DD;
}

.wiki pre code {
  border: solid 1px;
  border-color: #FFE8A9;
  padding: 0.5em;
  display: block;
}

.wiki div.codetitle {
  background: #FFE8A9;
  color: #614B2A;
  padding: 0.25em;
  font-weight: bold;
}

.wiki h1 {
  font-size: 2em;
  margin-top: 1em;
  margin-bottom: 0.5em;
  font-weight: bold;
  line-height: 1.25em;
  color: #666;
  border-bottom: 2px dotted #999;
}

.wiki h1:first-child, .wiki h1.first {
  margin-top: 0;
}

.wiki h2 {
  font-size: 1.5em;
  font-weight: bold;
  margin-top: 0.5em;
  margin-bottom: 0.5em;
  line-height: 1.25em;
  border-bottom: 1px dashed #ccc;
}

.wiki h2:first-child, .wiki h2.first {
  margin-top: 0;
}

.wiki h3 {
  font-size: 1.1em;
  margin: 1em 0;
  font-weight: bold;
}

.wiki h4 {font-weight: bold;}

.wiki span.caps {
  font-size: 80%;
}

.wiki p.left {
  margin: 0;
}
.wiki p.left img {
  margin-right: 1em;
}

.wiki p.right {
  margin: 0;
}
.wiki p.right img {
  margin-left: 1em;
}

.wiki table {
  border-collapse: collapse;
  margin: 1em 0;
}

.wiki td {
  padding: 4px;
  border: 1px solid #CCC;
}

.wiki th {
  padding: 4px;
  border: 1px solid #CCC;
  background: #ddd;
}

.wiki tr.odd {
  background-color: #F2F2F2;
}
.wiki tr.even {
  background-color: white;
}

.wiki a.anchor {
  opacity: 0;
  margin-left: 6px;
  text-decoration: none;
}
.wiki a.anchor:hover {
  color: #666 !important;
  text-decoration: none;
}

.wiki h1:hover a.anchor,
.wiki h2:hover a.anchor,
.wiki h3:hover a.anchor {
  opacity: 1;
  color: #aaa;
  background: white;
}

.wiki ul.toc {
  display: table;
  background-color: #f9f9f9;
  border: 1px solid #e6e6e6;
  padding: 4px;
  margin: 0 0 1em 0;
  list-style-type: none;
  list-style-image: none;
  padding-left: 0.5em;
}

.wiki ul.toc ul, .wiki ul.inline_toc ul {
  list-style-type: none;
  list-style-image: none;
  padding-left: 1.5em;
  margin: 0;
}

.wiki ul.toc span {
  padding-right: 0.3em;
}

.wiki ul.toc li {
  font-size: 0.95em;
  list-style-type: none;
  margin: 0;
}

.wiki ul.inline_toc li {
  list-style-type: none;
  margin: 0;
}

.wiki em, .wiki i {
  font-style: italic;
}
.wiki strong, .wiki b {
  font-weight: bold;
}

