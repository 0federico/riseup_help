#top {
  width: 100%;
  margin: 0;
  <% if @masthead_image_bg %>
    background: <%= @masthead_color %> url(<%= @masthead_image_bg %>);
  <% else %>
    background-color: <%= @masthead_color %>;
  <% end %>
}

#masthead {
}

#masthead_graphic {
  height: <%= @masthead_height %>px;
  background: transparent url(<%= @masthead_image %>) top left no-repeat;
  position: relative;
}

#menu {
  position: absolute;
  bottom: 0px;
}

#menu li {
  float: left;
}

#menu a {
  display: block;
  padding: 5px 14px;
  color: white;
  font-size: 14px;
  line-height: 20px;
  background-color: rgba(0,0,0,0.15);
}

#menu a.active {
  background-color: <%= @background_color %>;
  color: black;
  -webkit-box-shadow: inset <%= "#{@menu_shadow_size}px #{@menu_shadow_size}px #{@menu_shadow_blur}px #{@menu_shadow_color}" %>;
  -moz-box-shadow: inset <%= "#{@menu_shadow_size}px #{@menu_shadow_size}px #{@menu_shadow_blur}px #{@menu_shadow_color}" %>;
  box-shadow: inset <%= "#{@menu_shadow_size}px #{@menu_shadow_size}px #{@menu_shadow_blur}px #{@menu_shadow_color}" %>;
}

@media only screen and (max-width: 500px) {
  #menu a {
    padding: 5px 6px;
    font-size: 12px;
  }
}

