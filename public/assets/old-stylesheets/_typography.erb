
p, ol, ul, td, div {
  font-family: verdana, helvetica, bitstream vera sans, sans-serif;
  font-size: <%= @font_size %>px;
  line-height: <%= @line_height %>px;
}

h2, h3, h4, h5 {
  font-family: verdana, helvetica, bitstream vera sans, sans-serif;
  line-height: 1em;
}

a {
  text-decoration: none;
}
a:hover {
  text-decoration: underline;
}
